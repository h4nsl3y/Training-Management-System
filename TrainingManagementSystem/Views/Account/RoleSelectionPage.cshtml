@{
    Layout = null;
    int roleId = ViewBag.Role;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/CSS/NotificationStyleSheet.css">
    <link rel="stylesheet" href="~/Content/CSS/RoleSelectorStyleSheet.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/Scripts/JavaScript/NotificationScript.js"></script>
    <script src="~/Scripts/JavaScript/RoleSelectionViewScript.js"></script>

</head>
<body>
    <div class="area">
        <form id="container-form">
            <div class="roleSelectorContainer" id="roleSelectorContainer" value="@roleId">
                <h2>Role :</h2>
                <div class="input-container" id="roleSelectorId">
                </div>
            </div>
            <input type="button" value="Submit" onclick="SetRole()">
        </form>
    </div>
    <div id="notification" class="notification-container">
        <p id="notificationTitle" class="notification-title">warning</p>
        <p id="notificationMessage"></p>
    </div>
</body>
</html>


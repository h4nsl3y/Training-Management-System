@{
    string fullName;
    string initial;
    if (ViewBag.Othername != null)
    {
        fullName = ViewBag.FirstName + " " + ViewBag.OtherName + " " + ViewBag.LastName;
    }
    else
    {
        fullName = ViewBag.FirstName + " " + ViewBag.LastName;
    }
    initial = ViewBag.FirstName.Substring(0, 1) + ViewBag.LastName.Substring(0, 1);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/CSS/UserViewStyleSheet.css"/>
    <link rel="stylesheet" href="~/Content/CSS/NotificationStyleSheet.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/Scripts/JavaScript/NotificationScript.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js"></script>
    <script src="~/Scripts/JavaScript/LogOutScript.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />


</head>
<body>
    <div class="account-area">
        <div class="account-img-container">
            <label class="account-img" id="account-img-id">@initial</label>
        </div>
        <div class="account-fullname-container">
            <h2 class="account-fullname" id="account-fullname-id">@fullName</h2>
        </div>
        <div class="log-out-container">
            <button class="log-out-button" onclick="LogOutUser()">Log out</button>
        </div>
    </div>
    @RenderBody()
    <div id="notification" class="notification-container">
        <p id="notificationTitle" class="notification-title"></p>
        <p id="notificationMessage"></p>
    </div>
</body>
</html>
